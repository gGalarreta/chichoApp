<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Lugar de venta</th>
        <th>valor</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% needs.each do |need| %>
        <tr>
          <td><%= need.name %></td>
          <td><%= need.description %></td>
          <td><%= need.sales_place %></td>
          <td><%= need.value %></td>
          <td>
            <%= link_to '<span class="fa fa-pencil"></span>'.html_safe, edit_need_path(need), class: "btn btn-default btn-sm", data: { "toggle" => "tooltip" }, title: "Edit" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
