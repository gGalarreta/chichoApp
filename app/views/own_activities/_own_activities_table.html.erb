<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Fecha del evento</th>
        <th>Precio estimado del evento</th>
        <th>Lugar del evento</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% activities.each do |my_activity| %>
        <tr>
          <td><%= my_activity.activity.name %></td>
          <td><%= my_activity.activity.description %></td>
          <td><%= my_activity.activity.show_time %></td>
          <td><%= my_activity.activity.value %></td>
          <td><%= my_activity.activity.place %></td>
          <td>
            <%#= link_to '<span class="fa fa-pencil"></span>'.html_safe, edit_activity_path(activity), class: "btn btn-default btn-sm", data: { "toggle" => "tooltip" }, title: "Edit" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
