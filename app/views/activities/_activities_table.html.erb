<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Fecha del evento</th>
        <th>Precio estimado del evento</th>
        <th>Lugar del evento</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% activities.each do |activity| %>
        <tr>
          <td><%= activity.name %></td>
          <td><%= activity.description %></td>
          <td><%= activity.show_time %></td>
          <td><%= activity.value %></td>
          <td><%= activity.place %></td>
          <td>
            <%= link_to '<span class="fa fa-pencil"></span>'.html_safe, edit_activity_path(activity), class: "btn btn-default btn-sm", data: { "toggle" => "tooltip" }, title: "Edit" %>
            <%= link_to '<span class="fa fa-plus"></span>'.html_safe, activity_path(activity), class: "btn btn-default btn-sm", data: { "toggle" => "tooltip" }, title: "Unirme" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
